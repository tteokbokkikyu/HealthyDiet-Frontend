<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:radius="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recordTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Time"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/foodWeightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总营养摄入"
            android:textColor="#F44336"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/caloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/proteinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dietaryFiberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiber"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/carbohydratesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbs"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sodiumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sodium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/potassiumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potassium"
            android:textSize="14sp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:text="删除" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
